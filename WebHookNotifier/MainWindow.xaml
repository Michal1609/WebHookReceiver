<Window x:Class="WebHookNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebHookNotifier"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="WebHook Notifier" Height="350" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Image Source="pack://application:,,,/notification.png" Width="24" Height="24" Margin="0,0,10,0" />
            <TextBlock FontSize="16" FontWeight="Bold" VerticalAlignment="Center">
                WebHook Notifier
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Status:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="StatusText" Text="Nepřipojeno" Margin="0,0,0,10"/>

            <TextBlock Text="Server URL:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="ServerUrlTextBox" Text="http://localhost:5017/notificationHub" Margin="0,0,0,10"/>

            <CheckBox x:Name="AutoStartCheckBox" Content="Spustit při startu Windows" Margin="0,0,0,10"/>

            <TextBlock Text="Poslední notifikace:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="LastNotificationText" Text="Žádná" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="ConnectButton" Content="Připojit" Width="100" Margin="5" Click="ConnectButton_Click"/>
            <Button x:Name="DisconnectButton" Content="Odpojit" Width="100" Margin="5" Click="DisconnectButton_Click" IsEnabled="False"/>
            <Button x:Name="MinimizeButton" Content="Minimalizovat" Width="100" Margin="5" Click="MinimizeButton_Click"/>
        </StackPanel>

        <!-- Ikona v systémové liště -->
        <tb:TaskbarIcon x:Name="NotifyIcon"
                       IconSource="/bell.ico"
                       ToolTipText="WebHook Notifier"
                       Visibility="Visible"
                       TrayBalloonTipClicked="NotifyIcon_BalloonTipClicked"
                       TrayLeftMouseDown="NotifyIcon_TrayLeftMouseDown">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Otevřít" Click="OpenMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="Ukončit" Click="ExitMenuItem_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
